<% include Partials/header.ejs %>

  <section style="background-color: #eee;">
    <div class="container pb-5">

      <div class="col-lg-12">
        <div class="card mb-4">
          <div class="card-body">


            <div class="row">
              <h4 class="text-center">Your Profile Information</h4>
              <div class="col-sm-3">
                <p class="mb-0">Username</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= user.username %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= user.first_name %>
                    <%= user.last_name %>
                </p>
              </div>
            </div>

            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= user.email %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Student ID</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= user.id %>
                </p>
              </div>
            </div>
            <hr>

            <div class="row">

              <button class="btn btn-outline-dark w-100" data-bs-toggle="modal" data-bs-target="#updateProfile">Update
                Information</button>

            </div>

          </div>
        </div>

      </div>
    </div>
    </div>
  </section>
  <% include Partials/footer.ejs%>