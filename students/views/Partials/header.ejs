<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Student Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
    <!-- Container wrapper -->
    <div class="container">
      <!-- Toggle button -->
      <button data-mdb-collapse-init class="navbar-toggler" type="button" data-mdb-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars"></i>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/all-courses">All Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/enrolled-courses">Enrolled Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/graduation-status">Graduation Status</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-invoices">My Invoices</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/library-info">Library Info</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">My Profile</a>
          </li>

        </ul>
        <!-- Left links -->
      </div>

      <!-- Right elements -->
      <div class="d-flex align-items-center">
        <% if (!authenticated) { %>
          <button type="button" class="btn btn-outline-primary me-2" data-bs-toggle="modal"
            data-bs-target="#loginFormModal">Login</button>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal"
            data-bs-target="#signupFormModal">Sign-up</button>

          <% } %>
            <% if (authenticated) { %>
              <a type="button" class="btn btn-outline-primary me-2" href="/users/logout">Logout</a>
              <% } %>

      </div>

    </div>

  </nav>
  <!-- Navbar -->

  <nav class="container navbar navbar-light bg-body-tertiary">
    <div class="container-fluid">
      <a href="/" class="navbar-brand">Student Portal</a>
      <form class="d-flex input-group w-auto" action="/search-courses" method="post">
        <input type="search" class="form-control rounded" name="query" placeholder="Search Courses" aria-label="Search"
          aria-describedby="search-addon" />
        <span class="input-group-text border-0" id="search-addon">
          <i class="fas fa-search"></i>
        </span>
      </form>


    </div>
  </nav>

  <% if (message) { %>
    <% if (message.length> 0) { %>
      <% message.forEach(msg=> { %>
        <div class="alert alert-primary alert-dismissible fade show w-50 m-auto" role="alert">
          <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div> <br>

        <% }) %>

          <% } %>
            <% } %>

              <div class="container">